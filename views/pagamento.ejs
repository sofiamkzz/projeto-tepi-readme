<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finalização de Compra - Viva Colors</title>
    <link rel="icon" href="papelaria.jpg.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: var(--light-color);
            font-family: 'Poppins', sans-serif;
            color: var(--secondary-color);
        }

        :root {
            --main-color: #d42249;
            --accent-color: #ffccf9;
            --secondary-color: #6a0572;
            --light-color: #fff4f9;
        }

        .navbar {
            background: linear-gradient(90deg, #e70a3a8f 20%, rgba(255,255,255,0) 78%, rgba(209, 11, 54, 0.564) 100%);
        }

        .navbar-brand {
            color: white !important;
        }

        h1 {
            color: var(--main-color);
            font-weight: bold;
        }

        .payment-option {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            background-color: #f9f9f9;
        }

        .form-check-input:checked + .form-check-label {
            font-weight: bold;
            color: var(--main-color);
        }

        footer {
            background: linear-gradient(90deg, #e70a3a8f 28%, rgba(255,255,255,0) 48%, rgba(209, 11, 54, 0.564) 90%);
            height: 60px;
            width: 100%;
        }

        .btn-primary {
            background-color: var(--main-color);
            border: none;
        }

        .btn-primary:hover {
            background-color: #b81c3d;
        }

        .text-center img {
            max-width: 200px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <div class="navbar-brand fw-bold text-dark-pink">
                <img src="/images/logo.jpg" alt="Logo Viva Colors" style="height: 50px;">
                Viva Colors
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="py-3 text-center">
        <div class="container">
            <h1>Finalização de Compra</h1>
            <p class="lead">Escolha a forma de pagamento e finalize sua compra</p>
        </div>
    </header>

    <!-- Formulário de Pagamento -->
    <main class="container my-5">
        <form>
            <div class="mb-4">
                <h3>Selecione a forma de pagamento:</h3>
                <div class="form-check">
                    <input type="radio" id="payment-card" name="payment-method" value="card" class="form-check-input" checked>
                    <label for="payment-card" class="form-check-label">Cartão de Crédito</label>
                </div>
            
                <div class="form-check">
                    <input type="radio" id="payment-debit" name="payment-method" value="debit" class="form-check-input">
                    <label for="payment-debit" class="form-check-label">Cartão de Débito</label>
                </div>

                <div class="form-check">
                    <input type="radio" id="payment-pix" name="payment-method" value="pix" class="form-check-input">
                    <label for="payment-pix" class="form-check-label">PIX</label>
                </div>
            </div>

            <!-- Dados do Cartão de Crédito -->
            <div id="credit-card-payment" class="payment-option">
                <h4><i class="fas fa-credit-card"></i> Pagamento com Cartão de Crédito</h4>
                <div class="mb-3">
                    <label for="card-name" class="form-label">Nome no Cartão</label>
                    <input type="text" id="card-name" class="form-control" placeholder="Nome completo">
                </div>
                <div class="mb-3">
                    <label for="card-number" class="form-label">Número do Cartão</label>
                    <input type="text" id="card-number" class="form-control" placeholder="1234 5678 9012 3456">
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="card-expiry" class="form-label">Validade</label>
                        <input type="text" id="card-expiry" class="form-control" placeholder="MM/AA">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="card-cvv" class="form-label">CVV</label>
                        <input type="text" id="card-cvv" class="form-control" placeholder="123">
                    </div>
                </div>
            </div>

            <!-- Dados do Cartão de Débito -->
            <div id="debit-card-payment" class="payment-option d-none">
                <h4><i class="fas fa-credit-card"></i> Pagamento com Cartão de Débito</h4>
                <div class="mb-3">
                    <label for="debit-card-name" class="form-label">Nome no Cartão</label>
                    <input type="text" id="debit-card-name" class="form-control" placeholder="Nome completo">
                </div>
                <div class="mb-3">
                    <label for="debit-card-number" class="form-label">Número do Cartão</label>
                    <input type="text" id="debit-card-number" class="form-control" placeholder="1234 5678 9012 3456">
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="debit-card-expiry" class="form-label">Validade</label>
                        <input type="text" id="debit-card-expiry" class="form-control" placeholder="MM/AA">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="debit-card-cvv" class="form-label">CVV</label>
                        <input type="text" id="debit-card-cvv" class="form-control" placeholder="123">
                    </div>
                </div>
            </div>

            <!-- Pagamento com PIX -->
            <div id="pix-payment" class="payment-option d-none">
                <h4><i class="fas fa-qrcode"></i> Pagamento com PIX</h4>
                <p>Escaneie o QR Code ou copie a chave abaixo:</p>
                <div class="text-center">
                    <img src="https://via.placeholder.com/200" alt="QR Code PIX" class="img-fluid mb-3">
                </div>
                <div class="mb-3">
                    <label for="pix-key" class="form-label">Chave PIX</label>
                    <div class="input-group">
                        <input type="text" id="pix-key" class="form-control" value="exemplo-chave-pix@dominio.com" readonly>
                        <button type="button" class="btn btn-outline-secondary" onclick="copyPixKey()">Copiar</button>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Finalizar Compra</button>
            </div>
        </form>
    </main>

    <footer class="bg-light py-4">
        <div class="container text-center">
            <p class="mb-0">&copy; 2024 Viva Colors. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script>
        const creditCardPayment = document.getElementById('credit-card-payment');
        const debitCardPayment = document.getElementById('debit-card-payment');
        const pixPayment = document.getElementById('pix-payment');
        const paymentMethods = document.querySelectorAll('input[name="payment-method"]');

        paymentMethods.forEach(method => {
            method.addEventListener('change', () => {
                if (method.value === 'card') {
                    creditCardPayment.classList.remove('d-none');
                    debitCardPayment.classList.add('d-none');
                    pixPayment.classList.add('d-none');
                } else if (method.value === 'debit') {
                    debitCardPayment.classList.remove('d-none');
                    creditCardPayment.classList.add('d-none');
                    pixPayment.classList.add('d-none');
                } else {
                    pixPayment.classList.remove('d-none');
                    creditCardPayment.classList.add('d-none');
                    debitCardPayment.classList.add('d-none');
                }
            });
        });

        function copyPixKey() {
            const pixKey = document.getElementById('pix-key');
            navigator.clipboard.writeText(pixKey.value);
            alert('Chave PIX copiada!');
        }
    </script>
</body>
</html>
